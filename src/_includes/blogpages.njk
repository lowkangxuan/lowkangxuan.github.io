---
layout: base.njk
---
<div class="d-flex flex-column align-items-center mb-5 pt-5">
    <h1 class="project-title text-center pt-4 pb-3">{{title}}</h1>
    <div class="d-flex flex-wrap gap-1 pt-0">
        {% for tag in tags -%}
            {% if tag != "blogs" -%}
                <a href="/tags/{{ tag }}/" class="tag tag-{{ tag }}"><span>{{ tag }}</span></a>
            {%- endif %}
        {%- endfor %}
    </div>
</div>
<div class="fw-bold" style="display: flex; flex-direction: row; border-bottom: 2px dashed #000; margin-bottom: 50px;">
    Published on {{ page.date.toLocaleString('default', { month: 'long' }) }} {{ page.date.getDate()}}, {{ page.date.getFullYear() }} 
    <span style="margin-left: auto;">{{ content | readingTime }} read</span>
</div>

{{ content | toc | safe }}
{{ content | safe }}

<footer class="project-footer d-flex justify-content-center gap-4">
    {% for social in socials.datas %}
        <a href="{{social.url}}" target="_blank">
            <i class="{{social.icon}} fa-lg"></i>
        </a>
    {% endfor %}
</footer>

