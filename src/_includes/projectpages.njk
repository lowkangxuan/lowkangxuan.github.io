---
layout: project.njk
---
<div class="d-flex flex-column align-items-center mb-5 pt-5">
    <h1 class="project-title text-center pt-4 pb-3">{{title}}</h1>
    <div class="d-flex flex-wrap gap-1 pt-0">
        {% for tag in tags -%}
            {% if tag != "projects" -%}
                <a href="/tags/{{ tag }}/" class="tag tag-{{ tag }}"><span>{{ tag }}</span></a>
            {%- endif %}
        {%- endfor %}
    </div>
</div>
{{ content | toc | safe }}
{{ content | safe }}
<footer class="project-footer ff-roboto">{{ page.date.toLocaleString('default', { month: 'long' }) }} {{ page.date.getDate()}}, {{ page.date.getFullYear() }}</footer>